<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
    android:background="@color/colorPrimary">
    <TextView
        android:layout_marginLeft="20dp"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:textSize="18sp"
        android:text="列表名称"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/color_gray_divider"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp" >
        <EditText
            android:background="@drawable/dialog_newlist"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_gravity="center"
            android:id="@+id/et_musiclist"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:textSize="18sp"
            />
    </LinearLayout >

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#88000000"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
        <Button
            android:layout_alignParentRight="true"
            android:id="@+id/btn_musiclist_submit"
            android:layout_width="60dp"
            android:layout_height="35dp"
            android:layout_margin="5dp"
            android:background="@drawable/btn_custom_selector"
            android:text="确定"/>
        <Button
            android:layout_margin="5dp"
            android:layout_toLeftOf="@id/btn_musiclist_submit"
            android:id="@+id/btn_musiclist_cancle"
            android:layout_width="60dp"
            android:layout_height="35dp"
            android:background="@drawable/btn_custom_selector"
            android:text="取消"/>
    </RelativeLayout >

</LinearLayout >