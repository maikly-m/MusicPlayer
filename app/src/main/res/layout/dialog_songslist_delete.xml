<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:gravity="center"
    android:background="@drawable/dialog_bg">
    <TextView
        android:id="@+id/tv_songslist_delete"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:textSize="14sp"
        android:text="删除"
        android:ellipsize="end"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/color_gray_divider"/>
    <LinearLayout
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="40dp" >
        <ImageView
            android:background="@drawable/btn_check_off_holo_light"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:id="@+id/iv_songslist_delete"
            android:layout_width="25dp"
            android:layout_height="25dp"
            />
        <TextView
            android:layout_marginRight="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:text="同时删除文件"/>
    </LinearLayout >

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/color_gray_divider"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
        <Button
            android:layout_alignParentRight="true"
            android:id="@+id/btn_songslist_delete_submit"
            android:layout_width="40dp"
            android:layout_height="25dp"
            android:layout_margin="5dp"
            android:background="@drawable/btn_custom_selector"
            android:text="确定"/>
        <Button
            android:layout_margin="5dp"
            android:layout_toLeftOf="@id/btn_songslist_delete_submit"
            android:id="@+id/btn_songslist_delete_cancle"
            android:layout_width="40dp"
            android:layout_height="25dp"
            android:background="@drawable/btn_custom_selector"
            android:text="取消"/>
    </RelativeLayout >

</LinearLayout >