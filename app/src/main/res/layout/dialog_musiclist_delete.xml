<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
    android:background="@color/colorPrimary">
    <TextView
        android:id="@+id/tv_musiclist_delete"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:textSize="18sp"
        android:text="确定删除"/>
    <View
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/color_gray_divider"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
        <Button
            android:layout_alignParentRight="true"
            android:id="@+id/btn_musiclist_delete_submit"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:layout_margin="5dp"
            android:background="@drawable/btn_custom_selector"
            android:text="确定"/>
        <Button
            android:layout_margin="5dp"
            android:layout_toLeftOf="@id/btn_musiclist_delete_submit"
            android:id="@+id/btn_musiclist_delete_cancle"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:background="@drawable/btn_custom_selector"
            android:text="取消"/>
    </RelativeLayout >

</LinearLayout >